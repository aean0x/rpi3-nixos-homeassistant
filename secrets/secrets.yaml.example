# SOPS Secrets Template
# 1. Run ./encrypt (will copy this to secrets.yaml.work)
# 2. Fill in your values
# 3. Save and exit - secrets.yaml will be created automatically

user:
    # Generate with: mkpasswd -m SHA-512
    # Used for SSH login when allowPasswordAuth is enabled in settings.nix
    hashedPassword: "$6$..."

    # SSH public keys (one per line, used for key-based SSH authentication)
    # Get your key with: cat ~/.ssh/id_ed25519.pub
    pubKeys: |
        ssh-ed25519 AAAA... user@workstation
        ssh-ed25519 AAAA... user@laptop
